<h1>burgers!</h1>



<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burgers-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>




<h2>Add burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgers">burger Name:</label>
    <input type="text" id="burgers" name="name">
  </div>

 
  <button type="submit">add burger</button>
</form>
